                    </TextBlock.RenderTransform>
		            <Run Text="CJ" Foreground="SteelBlue"/>
                </TextBlock>
            </Grid>

            <Grid IsHitTestVisible="False"
                  Margin="2"
                  ToolTip="Corona Parcial 3/4" 
