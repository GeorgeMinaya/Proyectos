                    </TextBlock.RenderTransform>
		            <Run Text="CV" Foreground="SteelBlue"/>
                </TextBlock>
            </Grid>

            <Grid IsHitTestVisible="False"
                  Margin="2"
                  ToolTip="Corona Jacket" 
                  MinHeight="12" MinWidth="14"
                  Tag="0406">
