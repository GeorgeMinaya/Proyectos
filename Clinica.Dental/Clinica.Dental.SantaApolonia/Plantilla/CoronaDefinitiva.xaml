                            <MatrixTransform Matrix="1.33333,0,0,1.33333,0.00758575,-3.025"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
		            <Run Text="4/5" Foreground="SteelBlue"/>
                </TextBlock>
            </Grid>

            <Grid IsHitTestVisible="False"
